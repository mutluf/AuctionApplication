@using AuctionApp.Application.DTOs.Responses.AuctionResponses
@model GetAuctionByIdResponse
@{
    ViewData["Title"] = "AuctionDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="single-product mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="single-product-img">
                    <img src="https://loremflickr.com/320/240/art" style="height:480px" alt="">
                </div>
            </div>
           @* <input type="hidden" asp-for="Id" asp-action="Offer"/>*@
            <div class="col-md-7">
                <div class="single-product-content">
                    <h3>
                        @Model.Title
                    </h3>
                    <p class="single-product-pricing"><span>Açılış Fiyatı</span>@Model.Product.BeginPrice</p>
                    <p>@Model.Product.Description</p>
                    <div class="single-product-form">



                        <form asp-action="Offer" method="post">
                            <input type="hidden" name="AuctionId" value=@Model.Id>
                            <input type="number" placeholder="0" asp-for="OfferPrice" />

                            <button type="submit" class="btn btn-primary">
                                Teklif Ver
                                <i class="fas fa-handshake"></i>
                            </button>
                        </form>
                        
                        @*<p><strong>Categories: </strong>Fruits, Organic</p>*@
                    </div>
                    @*<h4>Share:</h4>
                    <ul class="product-share">
                        <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href=""><i class="fab fa-twitter"></i></a></li>
                        <li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
                        <li><a href=""><i class="fab fa-linkedin"></i></a></li>
                    </ul>*@
                </div>
            </div>
        </div>
    </div>
</div>
